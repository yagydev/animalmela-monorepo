# Production Environment Variables for Vercel Deployment
NODE_ENV=production
NEXT_PUBLIC_BASE_URL=https://your-domain.vercel.app

# MongoDB Configuration (Replace with your production MongoDB URI)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kisaanmela?retryWrites=true&w=majority

# API Keys (Replace with your actual keys)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
OPENWEATHER_API_KEY=your_openweather_api_key
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_for_production

# Email Configuration (if using email services)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# WhatsApp Configuration
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_PHONE_NUMBER=+919876543210

# Cache Configuration
REDIS_URL=your_redis_url_if_using_redis
CACHE_TTL=3600

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id