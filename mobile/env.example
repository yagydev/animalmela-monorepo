# Pashu Marketplace Mobile App Environment Variables

# API Configuration
API_BASE_URL=http://localhost:5001/api
# For Android emulator, use: http://10.0.2.2:5001/api
# For iOS simulator, use: http://localhost:5001/api
NEXT_PUBLIC_API_URL=http://localhost:5001/api

# Feature Flags Remote Configuration
FEATURES_REMOTE_URL=http://localhost:5001/api/config/features

# Firebase Configuration (lazy loaded)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:android:abcdef123456

# Payment Configuration (lazy loaded)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_key_secret

# Maps Configuration (lazy loaded)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# SMS/WhatsApp Configuration
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# App Configuration
APP_NAME=Pashu Marketplace
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG_FEATURES=true
