# Database Configuration
DATABASE_URL=mongodb://localhost:27017/animall

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-too
JWT_REFRESH_EXPIRE=30d

# AWS Configuration
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=AKIA_EXAMPLE_KEY_ID
AWS_SECRET_ACCESS_KEY=example_secret_key_change_this

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_example_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_example_webhook_secret

# Email Configuration (SendGrid)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# App Configuration
NODE_ENV=production
PORT=5000
API_URL=http://localhost:5000/api
FRONTEND_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this

# Admin Configuration
ADMIN_EMAIL=admin@animall.com
ADMIN_PASSWORD=change-this-password

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key

# Payment Configuration
PAYMENT_CURRENCY=USD
PLATFORM_FEE_PERCENTAGE=5

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Feature Flags
ENABLE_CHAT=true
ENABLE_REVIEWS=true
ENABLE_BOOKINGS=true
ENABLE_PAYMENTS=true
